@{
    ViewBag.Title = "Contact";

    Layout = "~/Views/Shared/_FrontendLayout.cshtml";
}

<br/>

<div class="clearfix">
    @*<div id="googlemap"></div>*@
</div>
<div class="item">
    <img src="" alt="Reach Us and we would get back to you " style="width:100%">
    <div class="carousel-caption">

    </div>
</div>
<div class="container-contacts">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <i class="fa fa-map-marker fa-4x" aria-hidden="true" style="color: #3498db;"></i>
                    </div>
                    <div class="col-md-9 text-left">
                        <br />
                        <p>No 5 Panyam Stree, St Theresa bustop , Jos, Plateau </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 text-center">
                        <i class="fa fa-mobile fa-4x" aria-hidden="true" style="color: #3498db;"></i>
                    </div>
                    <div class="col-md-9 text-left">
                        <br />
                        <p>+234 703-669-7340</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 text-center">
                        <i class="fa fa-envelope-o fa-3x" aria-hidden="true" style="color: #3498db;"></i>
                    </div>
                    <div class="col-md-9 text-left">
                        <br />
                        <p><a href="mailto:support@fincoremessaging.com">support@fincoremesaging.com</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <form action="#" method="Post">
                    <div class="form-group">
                        <label for="form-name">Name</label>
                        <input type="email" class="form-control" id="form-name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="form-email">Email Address</label>
                        <input type="email" class="form-control" id="form-email" placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <label for="form-subject">Subject</label>
                        <input type="text" class="form-control" id="form-subject" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <label for="form-message">Message</label>
                        <textarea class="form-control" id="form-message" placeholder="Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-info">Send Message</button>
                    <br /><br />
                </form>
            </div>
        </div>
    </div>
    <div class="clearfix hidden-xs" style="width:100%; height:30px;"></div>
</div>

<script src="js/jquery.min.js"></script>
<script src="bootstrap/js/bootstrap.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js"></script>

<script type="text/javascript">
    jQuery(function($) {
        // Google Maps setup
        var googlemap = new google.maps.Map(
            document.getElementById('googlemap'),
            {
                center: new google.maps.LatLng(9.922358, 8.887611),
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
        );
    });
</script>