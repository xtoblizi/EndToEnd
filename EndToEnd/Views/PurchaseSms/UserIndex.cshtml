@model IEnumerable<EndToEnd.Models.PurchaseSms>

@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<h2> @ViewBag.Message </h2>
<p>
    @Html.ActionLink("Purchase Another Token", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.SmsUser.DesiredNameForSms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseSucceded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Token)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.SmsUser.DesiredNameForSms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseSucceded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Token)
        </td>
        <td>

        </td>
    </tr>
}

</table>
