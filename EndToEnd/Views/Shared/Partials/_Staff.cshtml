                    <li id="left-sidebar-menu-dashboard-dashboardV1"><a href="@Url.Action("Edit", "Staffs")"><i class="fa fa-circle-o"></i> Edit Profile </a></li>
                    <li id="left-sidebar-menu-dashboard-dashboardV2"><a href="@Url.Action("AddPhoneNumber", "Manage" ,  new {id= User.Identity.GetUserId()}))"><i class="fa fa-circle-o"></i> Add PhoneNumber </a></li>
                    <li id="left-sidebar-menu-dashboard-dashboardV3"><a href="@Url.Action("ChangePassword", "Manage" , new {id= User.Identity.GetUserId()})"><i class="fa fa-circle-o"></i> Change Password</a></li>
   </ul>
