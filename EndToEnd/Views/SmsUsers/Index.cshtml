@model IEnumerable<EndToEnd.Models.SmsUser>

@{
    ViewBag.Title = "Index";
}

<div style="overflow:scroll">
    <p>
        @Html.ActionLink("Create New SmsUser", "Create")
    </p>
    <table class="table table-responsive">
        <tr class="tab-primary">
            <th>
                @Html.DisplayNameFor(model => model.DesiredNameForSms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBusiness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsIndividual)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>


            <th></th>
            <hr />
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DesiredNameForSms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBusiness)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsIndividual)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SmsUserId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SmsUserId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SmsUserId })
                </td>
            </tr>
        }

    </table>
</div>
